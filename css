/* Responsive Layouts */

/* Desktop: 3 sections in a row */
@media (min-width: 992px) {
    .box {
        width: 30%;
    }
}

/* Tablet: 2 sections in one row, 3rd takes full width */
@media (min-width: 768px) and (max-width: 991px) {
    .box {
        width: 48%;
    }
    .box:nth-child(3) {
        width: 100%;
    }
}

/* Mobile: Each section takes full width */
@media (max-width: 767px) {
    .box {
        width: 100%;
    }
}
